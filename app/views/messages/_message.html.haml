.message-list__message-contents{data: {message: {id: message.id}}}
  .message-list__message-contents__user-name
    = message.user.name
  .message-list__message-contents__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.message-list__message-box
  - if message.content.present?
    %p.message-box__message
      = message.content
  = image_tag message.image.url, class: 'image' if message.image.present?