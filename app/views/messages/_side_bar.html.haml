.Side-bar
  .user-name
    .user-name__top-items
      %p.user-name__top-items__name
        = current_user.name
      %ul.user-name__top-items__top-icons
        %li
          = link_to "#", class: "edit-btn" do
            = icon('far', 'edit')
        %li
          = link_to edit_user_path(current_user), class: "cog-btn" do
            = icon('fa', 'cog')
  .group-list
    .group-list__user-group
      = link_to "#", class: "group-list__user-group__group-name" do
        Group 1
      .group-list__user-group__new-message まだメッセージはありません
    .group-list__user-group
      = link_to "#", class: "group-list__user-group__group-name" do
        Group 2
      .group-list__user-group__new-message まだメッセージはありません
    